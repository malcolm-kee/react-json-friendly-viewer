{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2021",
		"moduleResolution": "node",
		"lib": ["DOM", "ES2021"],
		"strict": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"jsx": "react",
		"isolatedModules": true,
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"declaration": true
	},
	"include": ["src"]
}
